package com.yihu.myt.service.service.impl;import java.util.List;import com.coreframework.db.DB;import com.coreframework.db.JdbcConnection;import com.coreframework.db.Sql;import com.yihu.myt.enums.MyDatabaseEnum;import com.yihu.myt.enums.LoginPlatformSqlNameEnum;import com.yihu.myt.util.StringUtil;import com.yihu.myt.vo.LoginPlatformVo;import com.yihu.myt.service.service.ILoginPlatformService;
public class LoginPlatformService implements ILoginPlatformService{
	/**	*获取列表记录数	*/	public Integer queryLoginPlatformCountByCondition(LoginPlatformVo vo) throws Exception{		Sql sql = DB.me().createSql(LoginPlatformSqlNameEnum.queryLoginPlatformCountByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		Integer count = DB.me().queryForInteger(MyDatabaseEnum.YiHuNet2008, sql);		return count;	}
	/**	*获取列表	*/	public List<LoginPlatformVo> queryLoginPlatformListByCondition(LoginPlatformVo vo) throws Exception{		Sql sql = DB.me().createSql(LoginPlatformSqlNameEnum.queryLoginPlatformListByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		sql.addVar("@page", "");		List<LoginPlatformVo> list = DB.me().queryForBeanList(MyDatabaseEnum.YiHuNet2008, sql,LoginPlatformVo.class);		return list;	}
	/**	*添加	*/	public void insertLoginPlatform(LoginPlatformVo vo) throws Exception{}
	/**	*修改	*/	public void updateLoginPlatformByCondition(LoginPlatformVo vo,JdbcConnection conn) throws Exception{Sql sql = DB.me().createSql(LoginPlatformSqlNameEnum.updateLoginPlatformByCondition);		if (vo == null  || StringUtil.isEmpty(vo.getLPID())) {			throw new Exception(" 不能为空或者 主键id 不能为空");		}		StringBuilder condition = new StringBuilder();		if (condition.length() == 0) {		throw new Exception("未有更新SQL被执行！");		} else {		condition.deleteCharAt(condition.length() - 1);		sql.addVar("@condition", condition.toString());		sql.addParamValue(vo.getLPID());		}		DB.me().update(conn, sql);		}
}