package com.yihu.myt.service.service.impl;import java.util.List;import com.coreframework.db.DB;import com.coreframework.db.JdbcConnection;import com.coreframework.db.Sql;import com.yihu.myt.enums.MyDatabaseEnum;import com.yihu.myt.enums.DoctorPriceRecordSqlNameEnum;import com.yihu.myt.util.StringUtil;import com.yihu.myt.vo.DoctorPriceRecordVo;import com.yihu.myt.service.service.IDoctorPriceRecordService;
public class DoctorPriceRecordService implements IDoctorPriceRecordService{
	/**	*获取列表记录数	*/	public Integer queryDoctorPriceRecordCountByCondition(DoctorPriceRecordVo vo) throws Exception{		Sql sql = DB.me().createSql(DoctorPriceRecordSqlNameEnum.queryDoctorPriceRecordCountByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		Integer count = DB.me().queryForInteger(MyDatabaseEnum.YiHuNet2008, sql);		return count;	}
	/**	*获取列表	*/	public List<DoctorPriceRecordVo> queryDoctorPriceRecordListByCondition(DoctorPriceRecordVo vo) throws Exception{		Sql sql = DB.me().createSql(DoctorPriceRecordSqlNameEnum.queryDoctorPriceRecordListByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		sql.addVar("@page", "");		List<DoctorPriceRecordVo> list = DB.me().queryForBeanList(MyDatabaseEnum.YiHuNet2008, sql,DoctorPriceRecordVo.class);		return list;	}
	/**	*添加	*/	public void insertDoctorPriceRecord(DoctorPriceRecordVo vo) throws Exception{}
	/**	*修改	*/	public void updateDoctorPriceRecordByCondition(DoctorPriceRecordVo vo,JdbcConnection conn) throws Exception{Sql sql = DB.me().createSql(DoctorPriceRecordSqlNameEnum.updateDoctorPriceRecordByCondition);		if (vo == null  || StringUtil.isEmpty(vo.getDPR_ID())) {			throw new Exception(" 不能为空或者 主键id 不能为空");		}		StringBuilder condition = new StringBuilder();		if (condition.length() == 0) {		throw new Exception("未有更新SQL被执行！");		} else {		condition.deleteCharAt(condition.length() - 1);		sql.addVar("@condition", condition.toString());		sql.addParamValue(vo.getDPR_ID());		}		DB.me().update(conn, sql);		}
}