package com.yihu.myt.service.service.impl;import java.util.List;import com.coreframework.db.DB;import com.coreframework.db.JdbcConnection;import com.coreframework.db.Sql;import com.yihu.myt.enums.MyDatabaseEnum;import com.yihu.myt.enums.DoctorClickSqlNameEnum;import com.yihu.myt.util.StringUtil;import com.yihu.myt.vo.DoctorClickVo;import com.yihu.myt.service.service.IDoctorClickService;
public class DoctorClickService implements IDoctorClickService{
	/**	*获取列表记录数	*/	public Integer queryDoctorClickCountByCondition(DoctorClickVo vo) throws Exception{		Sql sql = DB.me().createSql(DoctorClickSqlNameEnum.queryDoctorClickCountByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		Integer count = DB.me().queryForInteger(MyDatabaseEnum.YiHuNet2008, sql);		return count;	}
	/**	*获取列表	*/	public List<DoctorClickVo> queryDoctorClickListByCondition(DoctorClickVo vo) throws Exception{		Sql sql = DB.me().createSql(DoctorClickSqlNameEnum.queryDoctorClickListByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		sql.addVar("@page", "");		List<DoctorClickVo> list = DB.me().queryForBeanList(MyDatabaseEnum.YiHuNet2008, sql,DoctorClickVo.class);		return list;	}
	/**	*添加	*/	public void insertDoctorClick(DoctorClickVo vo) throws Exception{}
	/**	*修改	*/	public void updateDoctorClickByCondition(DoctorClickVo vo,JdbcConnection conn) throws Exception{Sql sql = DB.me().createSql(DoctorClickSqlNameEnum.updateDoctorClickByCondition);		if (vo == null  || StringUtil.isEmpty(vo.getDC_ID())) {			throw new Exception(" 不能为空或者 主键id 不能为空");		}		StringBuilder condition = new StringBuilder();		if (condition.length() == 0) {		throw new Exception("未有更新SQL被执行！");		} else {		condition.deleteCharAt(condition.length() - 1);		sql.addVar("@condition", condition.toString());		sql.addParamValue(vo.getDC_ID());		}		DB.me().update(conn, sql);		}
}