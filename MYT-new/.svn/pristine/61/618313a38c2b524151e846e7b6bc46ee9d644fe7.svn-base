package com.yihu.myt.service.service.impl;import java.sql.SQLException;import java.util.List;import com.coreframework.db.DB;import com.coreframework.db.JdbcConnection;import com.coreframework.db.Sql;import com.yihu.myt.enums.MyDatabaseEnum;import com.yihu.myt.enums.MyTableNameEnum;import com.yihu.myt.enums.SelfHelpSqlNameEnum;import com.yihu.myt.util.StringUtil;import com.yihu.myt.vo.SelfHelpVo;import com.yihu.myt.service.service.ISelfHelpService;
public class SelfHelpService implements ISelfHelpService{
	/**	*获取列表记录数	*/	public Integer querySelfHelpCountByCondition(SelfHelpVo vo) throws Exception{		Sql sql = DB.me().createSql(SelfHelpSqlNameEnum.querySelfHelpCountByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		Integer count = DB.me().queryForInteger(MyDatabaseEnum.YiHuNet2008, sql);		return count;	}
	/**	*获取列表	*/	public List<SelfHelpVo> querySelfHelpListByCondition(SelfHelpVo vo) throws Exception{		Sql sql = DB.me().createSql(SelfHelpSqlNameEnum.querySelfHelpListByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		sql.addVar("@page", "");		List<SelfHelpVo> list = DB.me().queryForBeanList(MyDatabaseEnum.YiHuNet2008, sql,SelfHelpVo.class);		return list;	}
	/**	*添加	*/	public int insertSelfHelp(SelfHelpVo vo) throws Exception{		try {			int r = DB.me().insert(					MyDatabaseEnum.boss,					DB.me().createInsertSql(vo, MyTableNameEnum.MYT_SelfHelp,							"boss"));			return r;		} catch (SQLException e) {			// TODO Auto-generated catch block			e.printStackTrace();			return -1;		}					}
	/**	*修改	*/	public void updateSelfHelpByCondition(SelfHelpVo vo,JdbcConnection conn) throws Exception{Sql sql = DB.me().createSql(SelfHelpSqlNameEnum.updateSelfHelpByCondition);		if (vo == null  || StringUtil.isEmpty(vo.getShId())) {			throw new Exception(" 不能为空或者 主键id 不能为空");		}		StringBuilder condition = new StringBuilder();		if (condition.length() == 0) {		throw new Exception("未有更新SQL被执行！");		} else {		condition.deleteCharAt(condition.length() - 1);		sql.addVar("@condition", condition.toString());		sql.addParamValue(vo.getShId());		}		DB.me().update(conn, sql);		}
}