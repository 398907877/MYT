package com.yihu.myt.dao;import java.util.List;import com.coreframework.db.DB;import com.coreframework.db.JdbcConnection;import com.coreframework.db.Sql;import com.yihu.myt.enums.MyDatabaseEnum;import com.yihu.myt.enums.ConsWaterFollowSqlNameEnum;import com.yihu.myt.util.StringUtil;import com.yihu.myt.vo.ConsWaterFollowVo;
public class ConsWaterFollowDAO {
	/**	*添加	*/	public void insertConsWaterFollow(ConsWaterFollowVo vo,JdbcConnection conn) throws Exception{		Sql sql = DB.me().createSql(ConsWaterFollowSqlNameEnum.insertConsWaterFollow);		sql.addParamValue(vo.getConsWaterID());		sql.addParamValue(vo.getFollwType());		sql.addParamValue(vo.getFollwResult());		sql.addParamValue(vo.getInputUserID());		sql.addParamValue(vo.getInputUserName());		sql.addParamValue(vo.getInputTime());		DB.me().insert(conn,sql);		}
	/**	*修改	*/	public void updateConsWaterFollowByCondition(ConsWaterFollowVo vo,JdbcConnection conn) throws Exception{Sql sql = DB.me().createSql(ConsWaterFollowSqlNameEnum.updateConsWaterFollowByCondition);		if (vo == null  || StringUtil.isEmpty(vo.getWaterFollowID())) {			throw new Exception(" 不能为空或者 主键id 不能为空");		}		StringBuilder condition = new StringBuilder();		if (condition.length() == 0) {		throw new Exception("未有更新SQL被执行！");		} else {		condition.deleteCharAt(condition.length() - 1);		sql.addVar("@condition", condition.toString());		sql.addParamValue(vo.getWaterFollowID());		}		DB.me().update(conn, sql);		}
}