package com.yihu.myt.service.service.impl;import java.util.List;import com.coreframework.db.DB;import com.coreframework.db.JdbcConnection;import com.coreframework.db.Sql;import com.yihu.myt.enums.MyDatabaseEnum;import com.yihu.myt.enums.FavoritesSqlNameEnum;import com.yihu.myt.util.StringUtil;import com.yihu.myt.vo.FavoritesVo;import com.yihu.myt.service.service.IFavoritesService;
public class FavoritesService implements IFavoritesService{
	/**	*获取列表记录数	*/	public Integer queryFavoritesCountByCondition(FavoritesVo vo) throws Exception{		Sql sql = DB.me().createSql(FavoritesSqlNameEnum.queryFavoritesCountByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		Integer count = DB.me().queryForInteger(MyDatabaseEnum.YiHuNet2008, sql);		return count;	}
	/**	*获取列表	*/	public List<FavoritesVo> queryFavoritesListByCondition(FavoritesVo vo) throws Exception{		Sql sql = DB.me().createSql(FavoritesSqlNameEnum.queryFavoritesListByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		sql.addVar("@page", "");		List<FavoritesVo> list = DB.me().queryForBeanList(MyDatabaseEnum.YiHuNet2008, sql,FavoritesVo.class);		return list;	}
	/**	*添加	*/	public void insertFavorites(FavoritesVo vo) throws Exception{}
	/**	*修改	*/	public void updateFavoritesByCondition(FavoritesVo vo,JdbcConnection conn) throws Exception{Sql sql = DB.me().createSql(FavoritesSqlNameEnum.updateFavoritesByCondition);		if (vo == null  || StringUtil.isEmpty(vo.getFAVO_ID())) {			throw new Exception(" 不能为空或者 主键id 不能为空");		}		StringBuilder condition = new StringBuilder();		if (condition.length() == 0) {		throw new Exception("未有更新SQL被执行！");		} else {		condition.deleteCharAt(condition.length() - 1);		sql.addVar("@condition", condition.toString());		sql.addParamValue(vo.getFAVO_ID());		}		DB.me().update(conn, sql);		}
}