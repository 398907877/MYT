package com.yihu.myt.service.service.impl;import java.util.List;import com.coreframework.db.DB;import com.coreframework.db.JdbcConnection;import com.coreframework.db.Sql;import com.yihu.myt.enums.MyDatabaseEnum;import com.yihu.myt.enums.QuesClickSqlNameEnum;import com.yihu.myt.util.StringUtil;import com.yihu.myt.vo.QuesClickVo;import com.yihu.myt.service.service.IQuesClickService;
public class QuesClickService implements IQuesClickService{
	/**	*获取列表记录数	*/	public Integer queryQuesClickCountByCondition(QuesClickVo vo) throws Exception{		Sql sql = DB.me().createSql(QuesClickSqlNameEnum.queryQuesClickCountByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		Integer count = DB.me().queryForInteger(MyDatabaseEnum.YiHuNet2008, sql);		return count;	}
	/**	*获取列表	*/	public List<QuesClickVo> queryQuesClickListByCondition(QuesClickVo vo) throws Exception{		Sql sql = DB.me().createSql(QuesClickSqlNameEnum.queryQuesClickListByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		sql.addVar("@page", "");		List<QuesClickVo> list = DB.me().queryForBeanList(MyDatabaseEnum.YiHuNet2008, sql,QuesClickVo.class);		return list;	}
	/**	*添加	*/	public void insertQuesClick(QuesClickVo vo) throws Exception{}
	/**	*修改	*/	public void updateQuesClickByCondition(QuesClickVo vo,JdbcConnection conn) throws Exception{Sql sql = DB.me().createSql(QuesClickSqlNameEnum.updateQuesClickByCondition);		if (vo == null  || StringUtil.isEmpty(vo.getQUESCLICK_ID())) {			throw new Exception(" 不能为空或者 主键id 不能为空");		}		StringBuilder condition = new StringBuilder();		if (condition.length() == 0) {		throw new Exception("未有更新SQL被执行！");		} else {		condition.deleteCharAt(condition.length() - 1);		sql.addVar("@condition", condition.toString());		sql.addParamValue(vo.getQUESCLICK_ID());		}		DB.me().update(conn, sql);		}
}