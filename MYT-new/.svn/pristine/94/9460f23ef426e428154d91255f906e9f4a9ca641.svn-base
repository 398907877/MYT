package com.yihu.myt.service.service.impl;import java.util.List;import com.coreframework.db.DB;import com.coreframework.db.JdbcConnection;import com.coreframework.db.Sql;import com.yihu.myt.enums.MyDatabaseEnum;import com.yihu.myt.enums.ConfigSqlNameEnum;import com.yihu.myt.util.StringUtil;import com.yihu.myt.vo.ConfigVo;import com.yihu.myt.service.service.IConfigService;
public class ConfigService implements IConfigService{
	/**	*获取列表记录数	*/	public Integer queryConfigCountByCondition(ConfigVo vo) throws Exception{		Sql sql = DB.me().createSql(ConfigSqlNameEnum.queryConfigCountByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		Integer count = DB.me().queryForInteger(MyDatabaseEnum.YiHuNet2008, sql);		return count;	}
	/**	*获取列表	*/	public List<ConfigVo> queryConfigListByCondition(ConfigVo vo) throws Exception{		Sql sql = DB.me().createSql(ConfigSqlNameEnum.queryConfigListByCondition);		StringBuilder condition = new StringBuilder();		sql.addVar("@condition", condition.toString());		sql.addVar("@page", "");		List<ConfigVo> list = DB.me().queryForBeanList(MyDatabaseEnum.YiHuNet2008, sql,ConfigVo.class);		return list;	}
	/**	*添加	*/	public void insertConfig(ConfigVo vo) throws Exception{}
	/**	*修改	*/	public void updateConfigByCondition(ConfigVo vo,JdbcConnection conn) throws Exception{Sql sql = DB.me().createSql(ConfigSqlNameEnum.updateConfigByCondition);		if (vo == null  || StringUtil.isEmpty(vo.getCONFIG_ID())) {			throw new Exception(" 不能为空或者 主键id 不能为空");		}		StringBuilder condition = new StringBuilder();		if (condition.length() == 0) {		throw new Exception("未有更新SQL被执行！");		} else {		condition.deleteCharAt(condition.length() - 1);		sql.addVar("@condition", condition.toString());		sql.addParamValue(vo.getCONFIG_ID());		}		DB.me().update(conn, sql);		}
}